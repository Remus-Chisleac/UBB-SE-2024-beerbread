<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app.CreateAccountDefault">
    <Grid>
        <Image Source="gradient_image.png" Aspect="AspectFill" HeightRequest="1000"/>
        <!-- Your other content goes here -->
        <StackLayout Padding="20">
            <Label Text="Create an account as:" HorizontalOptions="Center" FontSize="20" Margin="0,0,0,20" TextColor="White"/>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Frame Margin="30,0,10,40" Padding="0" CornerRadius="27" BorderColor="White" BackgroundColor="Transparent">
                    <Button Text="User" Padding="30,0,30,0" Clicked="UserButton_Clicked" TextColor="White" FontFamily="Nunito_Sans_Font.ttf" BackgroundColor="Transparent" FontSize="20"/>
                </Frame>
                <Frame Margin="30,0,20,40" Padding="0" CornerRadius="27" BorderColor="White" BackgroundColor="Transparent">
                    <Button Text="Artist" Padding="30,0,30,0" Clicked="ArtistButton_Clicked" TextColor="White" FontFamily="Nunito_Sans_Font.ttf" BackgroundColor="Transparent" FontSize="20" />
                </Frame>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>