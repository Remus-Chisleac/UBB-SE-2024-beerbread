<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="app.src.Main_page.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid>
        <Image
            Aspect="AspectFill"
            HeightRequest="1000"
            Source="background_gradient_mainpage.png" />
        <Grid>
            <Grid.RowDefinitions>
                <!--  Account info| top navbar  -->
                <RowDefinition Height="0.1*" />
                <!--  search bar  -->
                <RowDefinition Height="0.15*" />
                <!--  Continue Listening  -->
                <RowDefinition Height="0.4*" />
                <!--  Your Top Mixes  -->
                <RowDefinition Height="0.55*" />
                <!--  bottom navbar  -->
                <RowDefinition Height="0.1*" />
            </Grid.RowDefinitions>


            <!--  Account info| top navbar  -->
            <Grid Grid.Row="0" Margin="5,10,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.1*" />
                    <ColumnDefinition Width="0.3*" />
                </Grid.ColumnDefinitions>

                <Frame
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,10,0,0"
                    Padding="0"
                    CornerRadius="50"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    IsClippedToBounds="True"
                    VerticalOptions="Center"
                    WidthRequest="40">
                    <Image
                        Margin="-20"
                        Aspect="AspectFit"
                        HeightRequest="50"
                        Source="mock_user.png"
                        WidthRequest="50" />
                </Frame>

                <VerticalStackLayout
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,10,0,0"
                    Padding="0"
                    HeightRequest="40"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    WidthRequest="120">
                    <Label
                        Margin="0,5,0,0"
                        FontAttributes="Bold"
                        FontFamily="NunitoSans"
                        FontSize="15"
                        Text="Welcome back !"
                        TextColor="White" />
                    <Label
                        Margin="0,-5,0,0"
                        FontAttributes="None"
                        FontFamily="NunitoSans"
                        FontSize="13"
                        Text="chandrama"
                        TextColor="White" />
                </VerticalStackLayout>

                <Frame
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="0,10,0,0"
                    Padding="0"
                    BackgroundColor="Transparent"
                    BorderColor="Transparent"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    IsClippedToBounds="True"
                    VerticalOptions="Center"
                    WidthRequest="40">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="onMusicCreatorTap" />
                    </Frame.GestureRecognizers>

                    <Image
                        Margin="-20"
                        Aspect="AspectFit"
                        HeightRequest="40"
                        Source="music_creator.png"
                        WidthRequest="40" />
                </Frame>
                <Frame
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="0,10,0,0"
                    Padding="0"
                    BackgroundColor="Transparent"
                    BorderColor="Transparent"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    IsClippedToBounds="True"
                    VerticalOptions="Center"
                    WidthRequest="40">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="onUserAccountTap" />
                    </Frame.GestureRecognizers>
                    <!-- THIS SHIT DROVE ME MAD, IT WAS HEIGHT AND WIDTH 35 BEFORE AND IT CRASHED EVERYTHING-->
                    <Image
                        Margin="-20"
                        Aspect="AspectFit"
                        HeightRequest="40"
                        Source="user_account.png"
                        WidthRequest="40" />
                </Frame>
            </Grid>
            <!--  search bar  -->
            <Frame
                x:Name="search_frame"
                Grid.Row="1"
                Margin="20,0,20,0"
                Padding="0"
                BackgroundColor="#d9d9d9"
                CornerRadius="15"
                HeightRequest="45">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="onSearchTap" />
                </Frame.GestureRecognizers>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.1" />
                        <ColumnDefinition Width="0.9" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Grid.Column="0"
                        Margin="10"
                        HeightRequest="20"
                        Source="search_icon.png"
                        WidthRequest="20" />
                    <Entry
                        x:Name="search_entry"
                        Grid.Column="1"
                        Margin="0,0,20,0"
                        Focused="onSearchFocus"
                        FontSize="15"
                        Placeholder="Search"
                        PlaceholderColor="Black"
                        TextColor="Black"
                        Unfocused="onSearchUnFocus" />

                </Grid>
            </Frame>
            <!--  Continue Listening  -->
            <Grid Grid.Row="2" Margin="5,10,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="20,0,0,10"
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="Recommended for you"
                    TextColor="White" />
                <Grid
